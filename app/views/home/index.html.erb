<div class="background">

  <div class="col-10 offset-1">

  <h1>Welcome, <%= User.find_by_id(current_user.id).email %></h1>

  <h2>Active games:</h2>

  </div>

  <div id="act">

  <%= render "active", locals: {:games => @games} %>

  </div>

  <div class="col-10 offset-1">

  <h2>Available games:</h2>

  </div>

  <div id="ava">

  <%= render "available", locals: {:games => @games} %>

  </div>

  <script>

  var timelyrefreshAvailable = function(){
    $.ajax({
    url: "load_available"
    })
  };
  setInterval(timelyrefreshAvailable,80000);

  </script>